  title Document
card(style='width:30rem')

  form(name="registration" action="/register" method="POST")
    .form-row
      .form-group.col-md-6
        label(for='fullname') Full Name
        input#fullname.form-control(type='text' name='fullname' placeholder='fullname')
      .form-group.col-md-6
        label(for='phone') Phone number
        input#phone.form-control(type='text' name='phone' placeholder='phone')
    .form-group
      label(for='address') Address
      input#address.form-control(type='text' name='address' placeholder='1234 Main St')
    .form-group
      label(for='language') Language
      input#language.form-control(type='text' name='language' placeholder='language eg JavaScript')
    .form-row
      .form-group.col-md-6
        label(for='city') City
        input#city.form-control(type='text' name='city')
      .form-group.col-md-2
        label(for='age') Age
        input#age.form-control(type='number' name='age')
    button.btn.btn-primary(type='submit') Sign in

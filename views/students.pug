doctype html

head

  meta(charset='UTF-8')

  meta(http-equiv='X-UA-Compatible' content='IE=edge')

  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')

  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  title Document

.container
  h3 
    | Total fees paid: #{total.totalFees}
  fieldset 
    table.table
        thead.thead-dark
            tr
                th(scope='col') Fullname
                th(scope='col') Phone
                th(scope='col') Address
                th(scope='col') Language
                th(scope='col') City
                th(scope='col') Age
                th(scope='col') Fees
                th(scope='col') action 
                th(scope='col') action 
        tbody
        if students.length
            each student in students 
                tr          
                    td #{student.fullname}
                    td #{student.phone}
                    td #{student.address}
                    td #{student.language}
                    td #{student.city}
                    td #{student.age}
                    td #{student.fees}
                    td 
                      //- we send information to the backend through forms
                      form(method="post", action="/students/delete")
                        input(type="hidden", name="id", value=student.id)
                        button.btn.btn-danger(type="submit") Delete
                    td 
                      a.btn.btn-dark.btn-block(href="/edit_student/"+student.id)  Edit    

        else
            p there are no students in the database

